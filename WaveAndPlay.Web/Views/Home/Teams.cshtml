@model IEnumerable<WaveAndPlay.Web.Models.TeamPlayer>

@{
    ViewData["Title"] = "Teams";
}

<h1>Your teams</h1>

<table class="table">
    <tbody>
        @foreach (var item in Model.GroupBy(x => x.Team.Name))
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Key)</b>
                </td>
            </tr>
            @foreach (var player in item.OrderBy(x => x.Player.Nickname))
            {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => player.Player.Nickname)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
